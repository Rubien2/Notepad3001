<Window
    x:Class="Notepad3000.RibbonWindow"
    x:Name="MasterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ribbon="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    Title="Notepad3000"
        Width="800" Height="600" ResizeMode="NoResize">
    <Grid>
        <TextBox x:Name="txtFileName" Margin="0,141,0,374"/>
        <TextBox x:Name="txtPerfectNotepad" Margin="0,195,0,0"/>
        <ribbon:Ribbon x:Name="masterRibbon" Margin="0,0,0,428">
            <ribbon:Ribbon.ApplicationMenu>
                <ribbon:RibbonApplicationMenu>
                    <ribbon:RibbonApplicationMenuItem x:Name="btnNewFile" Header="New file" Click="btnNewFile_Click"/>
                    <ribbon:RibbonApplicationMenuItem Header="Open file" x:Name="btnOpenFile" Click="btnOpenFile_Click"/>
                </ribbon:RibbonApplicationMenu>
            </ribbon:Ribbon.ApplicationMenu>
            <ribbon:RibbonTab Header="Home">
                <ribbon:RibbonGroup>
                    <RibbonButton Width="70" Height="17" Label="Copy" SmallImageSource="C:\Users\rdavelaar\Pictures\icon.ico"/>
                    <RibbonButton Width="70" Height="17" Label="Paste" SmallImageSource="C:\Users\rdavelaar\Pictures\icon.ico"/>
                </ribbon:RibbonGroup>
            </ribbon:RibbonTab>
        </ribbon:Ribbon>
    </Grid>
</Window>