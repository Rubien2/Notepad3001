<Window
    x:Class="Notepad3000.RibbonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Notepad3000"
        Width="800" Height="600" ResizeMode="NoResize">
    <Grid>
        <TextBox x:Name="txtFileName" Margin="0,141,0,374"/>
        <TextBox x:Name="thePerfectNotepad" Margin="0,195,0,0"/>
        <Ribbon x:Name="masterRibbon" Margin="0,0,0,428">
            <Ribbon.HelpPaneContent>
                <RibbonButton x:Name="ribbonSaveButton"/>
            </Ribbon.HelpPaneContent>
            <RibbonTab>
                <RibbonGroup Margin="0,1" Width="791">
                    <Button x:Name="ribbonNewFile" Margin="0,0,-38,-38"/>
                </RibbonGroup>
            </RibbonTab>
        </Ribbon>
    </Grid>
</Window>